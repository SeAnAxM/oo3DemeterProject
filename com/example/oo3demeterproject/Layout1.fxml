<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx" fx:id="mainPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.oo3demeterproject.Layout1Controller" prefHeight="600.0" prefWidth="800.0">
    <VBox alignment="CENTER">
        <HBox>
            <Region HBox.hgrow="ALWAYS" /> <!-- Filler -->
            <Button fx:id="exitButton" text="Exit to Menu" />
        </HBox>
        <Pane fx:id="stackPane" prefHeight="480.0" prefWidth="800.0"/>
        <HBox alignment="CENTER" spacing="50">
            <ImageView fx:id="plasticBin" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@plasticbin.png" />
                </image>
            </ImageView>
            <ImageView fx:id="glassBin" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@glassbin.png" />
                </image>
            </ImageView>
            <ImageView fx:id="paperBin" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@paperbin.png" />
                </image>
            </ImageView>
            <ImageView fx:id="organicBin" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@organicbin.png" />
                </image>
            </ImageView>
        </HBox>
        <Label fx:id="scoreLabel" text="Place 15 wastes at their corresponding bins to advance." />
    </VBox>
</StackPane>